#Creating Makefile using variables, rules and different clean options 

CC = gcc
SRC = main.c school.c
OBJ = $(SRC: .C=O)
NAME = school
RM = rm -f
all : $(OBJ)
    $(CC) $(OBJ) - O $(NAME)
.PHONY: clean oclean fclean re
clean : 
    $(RM) *~$(NAME)
Oclean :
    $(RM) $(OBJ)
fclean : clean oclean
re : oclean all